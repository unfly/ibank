<div class="row">
<div class="col-md-4 col-xs-12">
<%= form_for(@card) do |f|  %>
<%= render 'shared/error', object: f.object %>
<div class="form-group">
<%= f.label :name, class: "sr-only" %>
<%= f.text_field :name, class: "form-control", placeholder: "银行名称" %>
</div>
<div class="form-group">
<%= f.label :num, class: "sr-only"  %>
<%= f.text_field :num, class: "form-control" , placeholder: "卡号后四位"%>
</div>
<div class="form-group">
<%= f.label :limit , class: "sr-only" %>
<%= f.text_field :limit , class: "form-control", placeholder: "信用额度"%>
</div>
<div class="form-group">
<%= f.label :sdate, class: "sr-only"  %>
<%= f.date_field :sdate , class: "form-control", placeholder: "账单日"%>
</div>
<div class="form-group">
<%= f.label :pddate, class: "sr-only"  %>
<%= f.date_field :pddate, class: "form-control" , placeholder: "还款日"%>
</div>
<div class="form-group">
<%= f.label :remark, class: "sr-only"  %>
<%= f.text_area :remark , class: "form-control", placeholder: "备注"%>
</div>
<%= f.submit class: "btn btn-primary center" %>
<% end %>
</div>
</div>
